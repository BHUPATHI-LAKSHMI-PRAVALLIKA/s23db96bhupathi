extends layout
block content
  h1= title
  p Welcome to the #{title} page.
  br
  br
  -
    let results = [
      { productName: "Iphone", price: 10.99, description: "OS-IOS" },
      { productName: "MAC Book", price: 19.99, description: "OS-MAC OS" },
      { productName: "Google Pixel", price: 25.49, description: "OS-ANDROID" }
    ]
  div.container-fluid
    div.row
      each item, index in results
        div.col-sm-2(onclick=`buy(${index})`)
          h4 Product: #{item.productName}
          p Price: $#{item.price}
          p Description: #{item.description}

  script.
    function buy(index) {
      alert(`You purchased item ${index}.`);
    }

