extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let productid = toShow._id
    - let product_type = toShow.product_type
    - let productcost = toShow.cost
    - let productsize = toShow.size
    - let actionid = "/resource/products/" + productid
    script let actionid = "#{actionid}"
    div
      div.row
        div(class='productAttr mr-3') Product ID is:
        div #{productid}
      div.row
        div(class='productAttr mr-3') Product Type is:
        div #{product_type}
      div.row
        div(class='productAttr mr-3') Product Size is:
        div #{productsize}
      div.row
        div(class='productAttr mr-3') Product Cost is:
        div #{productcost}
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
  script.
    function cancel() {
      // Go back to the home page for the product collection
      window.location.href='/products'
    }
  script.
    function deleteOnid() {
      console.log("starting delete")
      // delete first
      fetch(actionid, {
        method: 'DELETE' 
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Delete succeded")
        window.location.href='/products'
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Delete failed " + error )
      });
    }
